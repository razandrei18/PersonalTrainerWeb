@page
@model RegisterModel
@{
    ViewData["Title"] = "Inregistrare";
}



    <div class="row">
        <div class="col-md-4" style="margin:0 auto; border:2px solid cyan; border-radius: 6px; padding: 10px;  background-image: linear-gradient(#5eccc6, #0783eb)">
            <h1 style="text-align:center; color:white">@ViewData["Title"]</h1>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h5 style="text-align:center; color:white">Completati campurile de mai jos pentru inregistrare:</h5>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="background-color:#5eccc6">Inregistrare</button>
            </form>
        </div>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
